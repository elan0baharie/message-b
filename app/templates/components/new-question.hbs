{{#if addNewQuestion}}
  <div class="well">
    <form class="horizontal-inline">
      <div class="form-group">
        <label for="content">Question Here:</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="note">Note:</label>
        {{input value=note id="note"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
