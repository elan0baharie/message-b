{{#if addNewResponse}}
  <h4>New Response</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'saveResponse'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'responseFormShow'}}>New Response</button>
{{/if}}
